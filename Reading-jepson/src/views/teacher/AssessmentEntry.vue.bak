        <p class="subtitle">Friday fluency & comprehension assessment</p>
      </div>

      <div v-if="loading" class="loading">Loading...</div>
      <div v-else-if="error" class="error-message">{{ error }}</div>

      <div v-else class="assessment-form">
        <div class="student-info-card">
          <h3>{{ studentName }}</h3>
          <p>{{ templateName }}</p>
          <p class="date-range">{{ formatDateRange() }}</p>
        </div>

        <!-- Passage Info -->
        <div v-if="fridayPassage" class="passage-info-card">
          <h3>Friday Passage: {{ fridayPassage.title }}</h3>
          <p class="word-count">
            <strong>{{ passageWordCount }} words</strong>
          </p>
        </div>

        <!-- Fluency Assessment -->
        <div class="form-section">
          <h2>üìä Fluency Assessment</h2>
          
          <div class="form-row">
            <div class="form-group">
              <label>Time (seconds)</label>
              <input 
                v-model.number="assessmentData.timeSeconds" 
                type="number" 
                class="form-input"
                min="1"
                @input="calculateWPM"
                required
              />
            </div>

            <div class="form-group">
              <label>Words Per Minute (WPM)</label>
              <input 
                v-model="calculatedWPM" 
                type="text" 
                class="form-input calculated"
                readonly
              />
              <p class="field-note">Auto-calculated from passage length and time</p>
            </div>
          </div>

