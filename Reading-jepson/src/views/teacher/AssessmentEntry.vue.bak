<script setup lang="ts">
import { ref, computed, onMounted } from 'vue'
import { useRoute, useRouter } from 'vue-router'
import { 
  getWeekAssignmentsByStudent,
  getPassagesByWeek,
  getStudent,
  createFluencyAssessment
} from '@/services/firestoreServices'
import { Timestamp } from 'firebase/firestore'
import type { 
  WeekAssignmentDocument,
  PassageDocument
} from '@/types/firestore'

const route = useRoute()
const router = useRouter()

const assignment = ref<WeekAssignmentDocument & { id: string } | null>(null)
const studentName = ref('')
const templateName = ref('')
const loading = ref(true)
const saving = ref(false)
const error = ref<string | null>(null)
const saveError = ref<string | null>(null)
const saveSuccess = ref<string | null>(null)

const fridayPassage = ref<PassageDocument | null>(null)
const passageWordCount = ref(0)

const assessmentData = ref({
  timeSeconds: 0,
  omissions: 0,
  insertions: 0,
  substitutions: 0,
  mispronunciations: 0,
  comprehensionScore: 0,
  comprehensionTotal: 0,
  compSummary: ''
})

const calculatedWPM = computed(() => {
  if (assessmentData.value.timeSeconds <= 0) return '0'
  const wpm = (passageWordCount.value / assessmentData.value.timeSeconds) * 60
  return wpm.toFixed(1)
})

const totalMiscues = computed(() => {
  return assessmentData.value.omissions +
         assessmentData.value.insertions +
         assessmentData.value.substitutions +
         assessmentData.value.mispronunciations
})

const accuracyPercent = computed(() => {
  if (passageWordCount.value === 0) return '0'
  const accuracy = ((passageWordCount.value - totalMiscues.value) / passageWordCount.value) * 100
  return Math.max(0, accuracy).toFixed(1)
})

const comprehensionPercent = computed(() => {
  if (assessmentData.value.comprehensionTotal === 0) return '0'
  const percent = (assessmentData.value.comprehensionScore / assessmentData.value.comprehensionTotal) * 100
  return percent.toFixed(1) + '%'
})

const canSave = computed(() => {
  return assessmentData.value.timeSeconds > 0 &&
         passageWordCount.value > 0
})

const calculateWPM = () => {
  // Reactive computed property handles this
}

const calculateAccuracy = () => {
  // Reactive computed property handles this
}

const formatDateRange = () => {
  if (!assignment.value) return ''
  const start = assignment.value.startDate.toDate()
  const end = assignment.value.endDate.toDate()
  return `${start.toLocaleDateString('en-US', { month: 'short', day: 'numeric' })} - ${end.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}`
}

const goBack = () => {
  router.back()
}

const saveAssessment = async () => {
  if (!assignment.value || !canSave.value) return
  
  try {
    saving.value = true
    saveError.value = null
    saveSuccess.value = null
    
    const studentDoc = await getStudent(assignment.value.studentId)
    
    await createFluencyAssessment({
      weekId: assignment.value.weekTemplateId,
      studentUid: studentDoc?.studentUid || '',
      studentId: assignment.value.studentId,
      teacherUid: assignment.value.teacherUid,
      date: Timestamp.now(),
      wordsRead: passageWordCount.value,
      timeSeconds: assessmentData.value.timeSeconds,
      wpm: parseFloat(calculatedWPM.value),
      omissions: assessmentData.value.omissions,
      insertions: assessmentData.value.insertions,
      substitutions: assessmentData.value.substitutions,
      mispronunciations: assessmentData.value.mispronunciations,
      miscuesTotal: totalMiscues.value,
      accuracyPercent: parseFloat(accuracyPercent.value),
      comprehensionScore: assessmentData.value.comprehensionScore || undefined,
      comprehensionTotal: assessmentData.value.comprehensionTotal || undefined,
      compSummary: assessmentData.value.compSummary || undefined
    })
    
    saveSuccess.value = 'Assessment saved successfully!'
    
    setTimeout(() => {
      router.push('/teacher/assignments/calendar')
    }, 1500)
  } catch (err: any) {
    console.error('Error saving assessment:', err)
    saveError.value = err.message || 'Failed to save assessment'
  } finally {
    saving.value = false
  }
}

onMounted(async () => {
  const assignmentId = route.query.assignmentId as string
  const studentId = route.query.studentId as string
  
  if (!assignmentId) {
    error.value = 'No assignment ID provided'
    loading.value = false
    return
  }
  
  try {
    if (studentId) {
      const studentDoc = await getStudent(studentId)
      studentName.value = studentDoc?.displayName || 'Student'
      
      const assignments = await getWeekAssignmentsByStudent(studentId)
      assignment.value = assignments.find(a => a.id === assignmentId) || null
      
      if (assignment.value) {
        const templateId = assignment.value.weekTemplateId
        templateName.value = `Q${assignment.value.quarter} Week ${assignment.value.weekNumber}`
        
        const passages = await getPassagesByWeek(templateId)
        fridayPassage.value = passages.find(p => p.type === 'friday') || null
        
        if (fridayPassage.value) {
          passageWordCount.value = fridayPassage.value.text.split(/\s+/).filter(w => w.length > 0).length
        }
      }
    }
  } catch (err: any) {
    console.error('Error loading assignment:', err)
    error.value = err.message || 'Failed to load assignment'
  } finally {
    loading.value = false
  }
})
</script>

