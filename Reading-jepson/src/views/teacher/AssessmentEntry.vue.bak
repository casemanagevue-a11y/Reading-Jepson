            {{ saving ? 'Saving...' : 'Save Assessment' }}
          </button>
          <button @click="goBack" class="btn btn-secondary">Cancel</button>
        </div>

        <div v-if="saveError" class="error-message">{{ saveError }}</div>
        <div v-if="saveSuccess" class="success-message">{{ saveSuccess }}</div>
